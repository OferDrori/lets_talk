<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegitrationActivity">


    <LinearLayout
        android:id="@+id/layoutLinear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/backgroun"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="60dp"
            android:textColor="#000000"
            android:text="CREATE PROFILE"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="25dp"/>
        <EditText
            android:id="@+id/email_registration_edt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textColor="#000000"
            android:layout_marginTop="10dp"
            android:textColorHint="#000000"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:textSize="20dp"
            android:hint="email"
            android:inputType="textEmailAddress" />
        <EditText
            android:id="@+id/firstName_edittext_registration_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:textSize="20dp"
            android:hint="Your First Name" />

        <EditText
            android:id="@+id/lastName_edittext_registration_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_marginTop="10dp"
            android:textColorHint="#000000"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:textSize="20dp"

            android:hint="Your Last Name" />

        <EditText
            android:id="@+id/location_edit_text_registration_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_marginTop="10dp"
            android:textColorHint="#000000"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:textSize="20dp"
            android:hint="Your location" />
        <EditText
            android:id="@+id/editText_description_activity_regitration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="#000000"
            android:layout_marginTop="10dp"
            android:textColorHint="#000000"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:textSize="20dp"
            android:hint="tell about yourself"
            />



        <EditText
            android:id="@+id/editText_password_activity_regitration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="#000000"
            android:layout_marginTop="10dp"
            android:textColorHint="#000000"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:textSize="20dp"
            android:hint="password"
            android:ems="10"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/create_btn_activity_regitration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="50dp"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:background="@drawable/ic_corner"
            android:text="Continue"
            android:textColor="#ffffff"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/regitration_info_textView"
            android:padding="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:visibility="invisible"
            android:text="info"
            android:textColor="#F50000"/>


    </LinearLayout>

</RelativeLayout>