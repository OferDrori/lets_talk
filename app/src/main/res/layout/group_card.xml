<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="10dp"
    android:paddingLeft="15dp"
    android:paddingRight="60dp"
    android:clipToPadding="false"
    android:background="@drawable/their_message"

    >

    <View
        android:id="@+id/avatar"
        android:background="@drawable/group"
        android:layout_alignParentLeft="true"
        android:scaleType="centerInside"
        android:layout_width="34dp"
        android:layout_height="34dp" />

    <TextView
        android:id="@+id/groupCard_name_text_view"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/avatar"
        android:layout_alignTop="@+id/avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="4dp"
        android:text="Hebrew lovers"
        android:textSize="20dp"
        android:textColor="#000000"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/groupCard_message_body"
        android:layout_below="@+id/groupCard_name_text_view"
        android:layout_alignLeft="@+id/groupCard_name_text_view"
        android:paddingVertical="12dp"
        android:paddingHorizontal="16dp"
        android:elevation="2dp"
        android:textSize="18dp"
        android:text="Hi there! It is so fun to learn Hebrew!
Letâ€™s speak about everything"

        android:textColor="#000000"
        />

</RelativeLayout>