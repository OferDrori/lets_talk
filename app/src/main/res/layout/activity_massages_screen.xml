<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#F8F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:id="@+id/massagesScreen_img_back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_back"
                ></ImageView>


            <TextView
                android:id="@+id/massagesScreen_textView_groupName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:text="Travel Lovers"
                android:textSize="20dp"
                android:fontFamily="Roboto"
                android:textColor="#000000"
                android:textStyle="bold"
                />

        </LinearLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >


            <TextView
                android:id="@+id/massagesScreen_textView_infoTodayTopic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:text="The topic of the day:"
                android:textSize="20dp"
                android:fontFamily="Roboto"
                android:textColor="#000000"
                android:textStyle="normal"
                />
        </RelativeLayout>
        <TextView
            android:id="@+id/massagesScreen_textView_TodayTopic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:text="Africa"
            android:textSize="20dp"
            android:fontFamily="Roboto"
            android:textColor="#000000"
            android:textStyle="bold"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/massagesScreen_addNewMassage_EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:fontFamily="Roboto"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:hint="Say something"
                android:textSize="20dp" />
            <ImageView
                android:id="@+id/massagesScreen_img_sent"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/send"
                android:layout_marginRight="10dp"


                ></ImageView>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            >
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="25dp">
            </FrameLayout>

            <ListView
                android:id="@+id/massagesScreen_Messages_ListView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="15dp"
                android:divider="@null"
                android:dividerHeight="10dp"
                android:stackFromBottom="true"/>



        </LinearLayout>


    </LinearLayout>


</RelativeLayout>