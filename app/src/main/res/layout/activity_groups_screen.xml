<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#F8F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:layout_marginTop="16px">

        <TextView
            android:id="@+id/groupsScreen_welcome_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:text="Letâ€™s Speak Hebrew"
            android:textSize="30dp"
            android:fontFamily="Roboto"
            android:textColor="#000000"
            android:textStyle="bold"
            />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/groupsScreen_flag"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:background="@drawable/israel_flag"
                android:shape="oval"
                android:layout_marginLeft="70dp"
                ></ImageView>

        <TextView
            android:id="@+id/groupsScreen_level"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:text="Level 1"
            android:textSize="20dp"
            android:fontFamily="Roboto"
            android:textColor="#000000"
            android:textStyle="normal"
            />
        </RelativeLayout>
        <TextView
            android:id="@+id/addNewGroupInfo_txt_massages_screen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:text="Join one of the existing groups or "
            android:textSize="20dp"
            android:fontFamily="Roboto"
            android:textColor="#000000"
            android:textStyle="normal"
            />

        <TextView
            android:id="@+id/groupsScreen_addNewGroup_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:fontFamily="Roboto"
            android:gravity="center"
            android:lineSpacingExtra="10sp"
            android:text="+ Create a new group"
            android:textColor="#0030FF"
            android:textSize="20dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            >
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="25dp">
            </FrameLayout>

            <ListView
                android:id="@+id/listView_groupScreen"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:divider="@null"
                android:dividerHeight="10dp"
                android:stackFromBottom="true"/>



        </LinearLayout>


    </LinearLayout>


</RelativeLayout>