<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChooseLanguage"
    android:background="@drawable/backgroun">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

    <TextView
        android:id="@+id/welcome_txt_massages_screen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:text="Welcome"
        android:textSize="30sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/exsit"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:background="@drawable/ic_back"
       />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="100dp">

        <TextView
            android:id="@+id/chooseLanguage_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="choose the language that you want to improve: " />
        <RadioGroup
            android:id="@+id/chooseLanguage_RDG_language"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp">

            <RadioButton
                android:id="@+id/chooseLanguage_RDB_hebrew"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hebrew"/>

            <RadioButton
                android:id="@+id/chooseLanguage_RDB_english"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="English"/>
            <RadioButton
                android:id="@+id/chooseLanguage_RDB_france"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="France"/>

        </RadioGroup>
        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Level:" />
        <RadioGroup
            android:id="@+id/menu_RDG_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp">

            <RadioButton
                android:id="@+id/chooseLanguage_RDB_beginners"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Beginners"/>

            <RadioButton
                android:id="@+id/chooseLanguage_RDB_mdiumLavel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="mdium_level"/>
            <RadioButton
                android:id="@+id/chooseLanguage_RDB_Advanced"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Advanced"/>

        </RadioGroup>
        <Button
            android:id="@+id/chooseLanguage_btn_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="continue" />

    </LinearLayout>

    </LinearLayout>

</RelativeLayout>